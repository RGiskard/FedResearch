{
  "model": "lenet",
  "optimizer": "adam",
  "learning_rate": 0.001,
  "epochs": 5,
  "batch_size": 32,
  "verbose": true,
  "use_divergence": true,
  "pruning_ratio": 0.2,
  "divergence_threshold": 0.1,
  "relevance_threshold": 0.05,
  "data_path": "data/client_{cid}.pkl",    // Ruta para el modo estático
  "data_template": "data/client_{cid}_round_{round}.pkl", // Ruta para el modo dinámico
  "data_mode": "static"                 // Puede ser "static" o "dynamic"
}
